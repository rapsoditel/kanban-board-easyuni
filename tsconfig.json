{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"]
  }
}
